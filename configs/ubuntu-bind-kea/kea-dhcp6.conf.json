// user@ubuntu-bind-kea:/etc/kea$ sudo cat kea-dhcp6.conf
{
  "Dhcp6": {
    "interfaces-config": {
      "interfaces": [ "ens3/3fff:1d00:3001:1d32::153" ]
    },
    "lease-database": {
      "type": "memfile",
      "persist": true,
//    "name": "/tmp/dhcp6.leases"
    },
    "valid-lifetime": 28800,
    "renew-timer": 1000,
    "rebind-timer": 2000,
    "preferred-lifetime": 3000,
    "option-data": [
      {
        "name": "dns-servers",
        "data": "2620:fe::fe"
      }
    ],
    "subnet6": [
      {
	"id": 1024,
        "subnet": "3fff:1d00:3001:1d33::/64",
	"interface": "ens3",
        "rapid-commit": true,
        "pools": [
          {
            "pool": "3fff:1d00:3001:1d33::20 - 3fff:1d00:3001:1d33::2f"
          }
        ]
      }
    ],
    "loggers": [
      {
        "name": "kea-dhcp6",
        "output_options": [
          {
            "output": "/tmp/kea-dhcp6.log",
            "maxver": 10
          }
        ],
        "severity": "INFO"
      }
    ]
  }
}